@{
    ViewBag.Title = "CreateQuiz";
}
<div ng-controller="quizController as quizCtrl">
    <div class="jumbotron">
        <button class="btn-default" ng-click="quizCtrl.newButton()">New Quiz</button>
        <table class="table-responsive table-striped table-hover table-condensed table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category</th>
                    <th>Question</th>
                    <th>Answer 1</th>
                    <th>Answer 2</th>
                    <th>Answer 3</th>
                    <th>Answer 4</th>
                    <th colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="quiz in quizCtrl.quizList">
                    <td>{{quiz.Id}}</td>
                    <td>{{quiz.Category}}</td>
                    <td>{{quiz.Question}}</td>
                    <td>{{quiz.Answer1}}</td>
                    <td>{{quiz.Answer2}}</td>
                    <td>{{quiz.Answer3}}</td>
                    <td>{{quiz.Answer4}}</td>
                    <td>
                        <button class="btn-warning btn-sm" ng-click="quizCtrl.editButton()">Edit</button>
                        <button class="btn-danger btn-sm" ng-click="quizCtrl.deleteButton(quiz.Id, $index)">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>