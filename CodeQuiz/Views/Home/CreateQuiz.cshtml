@{
    ViewBag.Title = "CreateQuiz";
}
<div ng-controller="quizController as quizCtrl">
    <div class="jumbotron">
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#newQuestion">New Question</button>
        <table class="table-responsive table-striped table-hover table-condensed table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category</th>
                    <th>Question</th>
                    <th>Answer 1</th>
                    <th>Answer 2</th>
                    <th>Answer 3</th>
                    <th>Answer 4</th>
                    <th colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="quiz in quizCtrl.quizList">
                    <td>{{quiz.Id}}</td>
                    <td>{{quiz.Category}}</td>
                    <td>{{quiz.Question}}</td>
                    <td>{{quiz.Answer1}}</td>
                    <td>{{quiz.Answer2}}</td>
                    <td>{{quiz.Answer3}}</td>
                    <td>{{quiz.Answer4}}</td>
                    <td>
                        <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editQuestion">Edit</button>
                        <button class="btn-danger btn-sm" ng-click="quizCtrl.deleteButton(quiz.Id, $index)">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <!-- Edit Modal -->
    <div id="editQuestion" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Question</h4>
                </div>
                <div class="modal-body">
                    <form name="newQuestion">
                        <div class="form-group">
                            <label for="category">Category:</label>
                            <select class="form-control" name="category">
                                <option>C#</option>
                                <option>JS</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="question">Question:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="answer1">Answer 1:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="answer2">Answer 2:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="answer3">Answer 3:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="answer4">Answer 4:</label>
                            <input type="text" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!-- New Modal -->
    <div id="newQuestion" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Create New Question</h4>
                </div>
                <div class="modal-body">
                    <form name="newQuestion">
                        <div class="form-group">
                            <label for="category">Category:</label>
                            <select class="form-control" name="category">
                                <option>C#</option>
                                <option>JS</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="question">Question:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="answer1">Answer 1:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="answer2">Answer 2:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="answer3">Answer 3:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="answer4">Answer 4:</label>
                            <input type="text" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>